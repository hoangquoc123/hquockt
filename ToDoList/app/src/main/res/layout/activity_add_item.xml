<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:orientation="vertical"

    tools:context="com.example.hoangquoc.todolist.AddItem">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:text="Task Name:"
            android:id="@+id/textView3"
            android:layout_weight="0.25"
            android:textStyle="bold"
            android:textSize="30dp" />

        <EditText
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:id="@+id/editName" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView5"
        android:height="1dp"
        android:background="#e3d2d2" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <TextView
            android:layout_width="176dp"
            android:layout_height="42dp"
            android:text="Task Notes:"
            android:id="@+id/textView2"
            android:textStyle="bold"
            android:textSize="30dp" />

        <EditText
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:id="@+id/etxtNotes" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView6"
        android:height="1dp"
        android:background="#e3d2d2" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Priority:"
            android:layout_weight="0.25"
            android:textStyle="bold"
            android:textSize="30dp" />

        <RadioGroup
            android:id="@+id/priGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Low"
            android:id="@+id/rbtnLow"
            android:checked="false"
            android:layout_weight="0.25" />

        <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Normal"
        android:id="@+id/rbtnNormal"
        android:checked="false"
            android:layout_weight="0.25" />



            <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High"
            android:id="@+id/rbtnHigh"
            android:checked="false" />
    </RadioGroup>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView7"
        android:height="1dp"
        android:background="#e3d2d2" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Status:"
            android:layout_weight="0.25"
            android:textStyle="bold"
            android:textSize="30dp"
            android:id="@+id/textView4" />
        <RadioGroup
            android:id="@+id/staGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To Do"
                android:id="@+id/rbtnToDo"
                android:checked="false"
                android:layout_weight="0.25"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DONE"
                android:id="@+id/rbtxDone"
                android:checked="false"
                />
        </RadioGroup>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView8"
        android:height="1dp"
        android:background="#e3d2d2" />
    <Button
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:id="@+id/btnSave"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
